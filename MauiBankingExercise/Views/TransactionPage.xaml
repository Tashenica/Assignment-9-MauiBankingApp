<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiBankingExercise.Views.TransactionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Transactions">

    <ScrollView>
        <StackLayout Padding="16" Spacing="16">
            <Border StrokeThickness="1" 
                    Stroke="DarkGreen" 
                    BackgroundColor="LightGreen">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <StackLayout Padding="16" Spacing="8">
                    <Label Text="{Binding Account.AccountNumber, StringFormat='Account: {0}'}" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    <Label Text="{Binding Account.AccountBalance, StringFormat='Balance: {0:C}'}" 
                           FontSize="16" 
                           TextColor="DarkGreen" />
                </StackLayout>
            </Border>

            <Border StrokeThickness="1" 
                    Stroke="Orange" 
                    BackgroundColor="LightYellow">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <StackLayout Padding="16" Spacing="12">
                    <Label Text="New Transaction" 
                           FontSize="18" 
                           FontAttributes="Bold" />

                    <Label Text="Transaction Type:" />
                    <Picker ItemsSource="{Binding TransactionTypes}" 
                            SelectedItem="{Binding SelectedTransactionType}" />

                    <Label Text="Amount:" />
                    <Entry Text="{Binding TransactionAmount}" 
                           Keyboard="Numeric" 
                           Placeholder="Enter amount" />

                    <Button Text="Submit Transaction" 
                            Command="{Binding SubmitTransactionCommand}" 
                            BackgroundColor="Blue" 
                            TextColor="White" />
                </StackLayout>
            </Border>

            <Label Text="Transaction History" 
                   FontSize="20" 
                   FontAttributes="Bold" />

            <CollectionView ItemsSource="{Binding Transactions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,4">
                            <Border StrokeThickness="1" 
                                    Stroke="LightGray" 
                                    BackgroundColor="White">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="4"/>
                                </Border.StrokeShape>

                                <Grid Padding="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0" Spacing="2">
                                        <Label Text="{Binding TransactionType.Name}" 
                                               FontSize="14" 
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding TransactionDate, StringFormat='{0:MMM dd, yyyy hh:mm tt}'}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                        <Label Text="{Binding Description}" 
                                               FontSize="12" 
                                               TextColor="Gray" />
                                    </StackLayout>

                                    <Label Grid.Column="1" 
                                           Text="{Binding Amount, StringFormat='{0:C}'}" 
                                           FontSize="16" 
                                           FontAttributes="Bold">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" 
                                                         Binding="{Binding TransactionType.Name}" 
                                                         Value="Deposit">
                                                <Setter Property="TextColor" Value="Green" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" 
                                                         Binding="{Binding TransactionType.Name}" 
                                                         Value="Withdrawal">
                                                <Setter Property="TextColor" Value="Red" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <ActivityIndicator IsVisible="{Binding IsLoading}" 
                               IsRunning="{Binding IsLoading}"
                               Color="Blue" />
        </StackLayout>
    </ScrollView>
</ContentPage>