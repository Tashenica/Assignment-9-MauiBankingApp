<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiBankingExercise.Views.CustomerDashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiBankingExercise.ViewModels"
             x:DataType="vm:CustomerDashboardViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <StackLayout Padding="20">
            <!-- Customer Info -->
            <Border BackgroundColor="LightBlue" Padding="15" Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="{Binding Customer.FirstName, StringFormat='Welcome, {0} {1}'}" 
                           FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Text="{Binding Customer.Email}" 
                           FontSize="16" HorizontalOptions="Center" TextColor="DarkBlue"/>
                    <Label Text="{Binding Customer.PhoneNumber}" 
                           FontSize="14" HorizontalOptions="Center" TextColor="DarkBlue"/>
                </StackLayout>
            </Border>

            <!-- Accounts Section -->
            <Label Text="Your Accounts" FontSize="20" FontAttributes="Bold" Margin="0,0,0,10"/>

            <CollectionView ItemsSource="{Binding Accounts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White" 
                                Stroke="Gray" 
                               Padding="15" 
                               Margin="0,5">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomerDashboardViewModel}}, Path=ViewAccountCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackLayout Grid.Column="0">
                                    <Label Text="{Binding AccountNumber}" 
                                           FontSize="18" FontAttributes="Bold"/>
                                    <Label Text="{Binding AccountTypeId, StringFormat='Account Type: {0}'}" 
                                           FontSize="14" TextColor="Gray"/>
                                    <Label Text="{Binding DateOpened, StringFormat='Opened: {0:MM/dd/yyyy}'}" 
                                           FontSize="12" TextColor="Gray"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" HorizontalOptions="End">
                                    <Label Text="{Binding AccountBalance, StringFormat='${0:N2}'}" 
                                           FontSize="20" FontAttributes="Bold" TextColor="Green"/>
                                    <Label Text="Balance" FontSize="12" TextColor="Gray" HorizontalOptions="Center"/>
                                </StackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <ActivityIndicator IsVisible="{Binding IsLoading}" 
                               IsRunning="{Binding IsLoading}"
                               Margin="20"/>
        </StackLayout>
    </ScrollView>
</ContentPage>